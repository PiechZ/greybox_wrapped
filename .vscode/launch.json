    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "adk_wrapped.app:app"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/frontend/package.json",
                "localRoot": "${workspaceFolder}/frontend/"
            }
        }
    ]
}